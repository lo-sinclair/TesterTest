{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">


        <h1>Результаты вашего теста</h1>

        <div class="result">
            {%  set count = 0 %}
            {% for n, data in answersData  %}
                <div>
                    <h3>Ворос №{{ n }}</h3>
                    <p><strong>{{ data.question }}</strong></p>
                    <p>Ваш ответ: {{ data.answer }} </p>
                    <p>Вы ответили
                        {% if data.result %}
                            <strong><span class="text-success">верно</span></strong>
                            {% set count = count+1 %}
                        {% else %}
                            <strong><span class="text-danger">не верно</span></strong>
                        {% endif %}
                    </p>

                </div>
            {% endfor %}
            <hr class="col-xs-12">
            <div>
                <p>Правильных ответов: {{ count }} из 3</p>
                <p><a href="{{ path('home') }}">Пройти тест еще раз</a></p>
            </div>

        </div>
    </div>
{% endblock %}
